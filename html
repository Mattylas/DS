<style>
  body { font-family: Arial, sans-serif; background: #f5f5f5; color: #222; padding: 20px; }
  h1, h2 { color: #2c3e50; }
  .question { margin: 20px 0; padding: 15px; background: #fff; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); }
  .options button { display: block; margin: 8px 0; padding: 10px 15px; width: 100%; border: none; border-radius: 5px; background: #3498db; color: #fff; cursor: pointer; }
  .options button:hover { background: #2980b9; }
  .feedback { margin-top: 10px; padding: 10px; border-left: 5px solid #27ae60; background: #ecf9f1; display: none; }
  .feedback.wrong { border-left-color: #c0392b; background: #fdecea; }
  #finalScore { font-size: 1.2em; margin-top: 20px; color: #e67e22; }
